{
  "name": "ts-common",
  "version": "0.1.0",
  "private": true,
  "license": "ISC",
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "build": "tsc -b && pnpm -r build",
    "test": "pnpm -r test",
    "lint": "eslint . --ext .ts,.tsx --cache --cache-location node_modules/.cache/eslint",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "release": "changeset version && pnpm install --no-frozen-lockfile && pnpm install -r --no-frozen-lockfile && pnpm -r build && changeset publish --no-git-tag",
    "pkg:build": "tsup",
    "pkg:dev": "tsup --watch",
    "pkg:clean": "rimraf dist || rm -rf dist",
    "pkg:lint": "eslint src --ext .ts,.tsx --cache --cache-location ../../node_modules/.cache/eslint",
    "pkg:test": "echo 'no tests yet'"
  },
  "pnpm": {
    "overrides": {
      "@fabianopinto/*": "workspace:*"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/node": "^20.19.11",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.10",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
