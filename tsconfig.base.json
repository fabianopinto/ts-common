{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@fabianopinto/errors": ["packages/errors/src/index.ts"],
      "@fabianopinto/logger": ["packages/logger/src/index.ts"],
      "@fabianopinto/config": ["packages/config/src/index.ts"],
      "@fabianopinto/utils": ["packages/utils/src/index.ts"]
    },
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "newLine": "lf"
  }
}
